<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:minHeight="120dp">

        <!-- Image Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/imageContainer"
            android:layout_width="80dp"
            android:layout_height="60dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/illustrationImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/links"
                    android:background="#F0F0F0"
                    android:padding="4dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/noImagePlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#F5F5F5"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/image_placeholder"
                        android:textSize="24sp" />

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Favourite Indicator (rond en haut à droite) -->
        <View
            android:id="@+id/favouriteIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle_favourite"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Prix (en dessous du favourite indicator) -->
        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_price"
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/favouriteIndicator"
            android:layout_marginTop="8dp" />

        <!-- Link Button (en bas à droite, moins haut mais plus large) -->
        <Button
            android:id="@+id/linkButton"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:text="@string/view_link"
            android:textSize="11sp"
            android:textAllCaps="false"
            android:background="@drawable/btn_outline"
            android:textColor="@color/gray_400"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Copy Link Button (to the left of the Link Button) -->
        <Button
            android:id="@+id/copyLinkButton"
            android:layout_width="wrap_content"
            android:minWidth="80dp"
            android:layout_height="32dp"
            android:text="@string/copy_link"
            android:textSize="11sp"
            android:textAllCaps="false"
            android:background="@drawable/btn_outline"
            android:textColor="@color/gray_400"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintEnd_toStartOf="@+id/linkButton"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
