<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/bg_gradient"
              android:paddingTop="24dp">

    <!-- Header -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textSize="28sp"
            android:textColor="#333333"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" />

    <!-- Settings Container -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="8dp"
            android:padding="24dp"
            android:paddingBottom="0dp">

        <!-- API Configuration Section -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/api_configuration"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

            <!-- Server URL -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/server_url"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                <EditText
                        android:id="@+id/serverUrlInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/server_url_hint"
                        android:importantForAutofill="no" android:textSize="14sp"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        android:background="@drawable/bg_input"
                        android:padding="12dp"
                        android:inputType="textUri" />

            </LinearLayout>

            <!-- API Key -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/api_key"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                <EditText
                        android:id="@+id/apiKeyInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/api_key_hint"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        android:background="@drawable/bg_input"
                        android:padding="12dp"
                        android:inputType="textPassword"
                        android:autofillHints="password" />

            </LinearLayout>

            <!-- API Actions -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                <Button
                        android:id="@+id/testApiButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/test_api"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_outline"
                        android:layout_marginEnd="8dp" />

                <Button
                        android:id="@+id/saveApiButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/save_api"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_primary"
                        android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- API Status -->
            <TextView
                    android:id="@+id/apiStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/api_status_not_configured"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:textAlignment="center"
                    android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Back Button - Now inside the white container at the bottom -->
        <Button
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/back"
                android:textColor="#666666"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textAllCaps="false"
                android:background="@drawable/btn_outline"
                android:elevation="0dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="0dp" />

    </LinearLayout>

</LinearLayout>
