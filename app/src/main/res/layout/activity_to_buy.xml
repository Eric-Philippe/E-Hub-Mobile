<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="@string/back_button"
            android:background="@drawable/btn_outline"
            android:textColor="#333333"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:fontFamily="sans-serif-medium"
            android:minWidth="0dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_buy_title"
            android:textSize="24sp"
            android:textColor="#1A1A1A"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/totalPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_price"
            android:textSize="18sp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:background="@drawable/btn_outline"
            android:padding="8dp"
            android:minWidth="60dp"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/filterToggle"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:background="?android:attr/selectableItemBackground"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:contentDescription="@string/toggle_filter" />

    </LinearLayout>

    <!-- Search and Filter Section -->
    <LinearLayout
        android:id="@+id/searchFilterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="1dp">

        <!-- Search Bar -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="@string/search_items_hint"
            android:background="@drawable/btn_outline"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:layout_marginBottom="12dp"
            android:inputType="text"
            android:importantForAutofill="no" />

        <!-- Filter Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_label"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/filterNotBoughtButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/not_bought"
                android:textSize="12sp"
                android:background="@drawable/selector_filter_button"
                android:textColor="#2196F3"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp" />

            <Button
                android:id="@+id/filterAllButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/all_items"
                android:textSize="12sp"
                android:background="@drawable/selector_filter_button"
                android:textColor="#666666"
                android:paddingHorizontal="12dp"
                android:minWidth="0dp" />

        </LinearLayout>

        <!-- Sort Row (updated) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sort"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/sortPriceButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/price_label"
                android:textSize="12sp"
                android:background="@drawable/btn_outline"
                android:textColor="#666666"
                android:paddingHorizontal="12dp"
                android:minWidth="0dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/sortDateButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/date_label"
                android:textSize="12sp"
                android:background="@drawable/btn_outline"
                android:textColor="#666666"
                android:paddingHorizontal="12dp"
                android:minWidth="0dp" />
        </LinearLayout>

        <!-- Year Filter Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year_label"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginEnd="8dp"/>

            <Spinner
                android:id="@+id/yearFilterSpinner"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:spinnerMode="dropdown"
                android:paddingHorizontal="16dp"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:background="@drawable/btn_outline"
                android:popupBackground="@drawable/spinner_popup_background"/>
        </LinearLayout>

        <!-- Manage Categories Button -->
        <Button
            android:id="@+id/manageCategoriesButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/manage_categories"
            android:textSize="12sp"
            android:textColor="#2196F3"
            android:background="@drawable/btn_outline"
            android:paddingHorizontal="16dp"
            android:fontFamily="sans-serif-medium"
            android:drawableStart="@android:drawable/ic_menu_manage"
            android:drawablePadding="8dp"
            android:drawableTint="#2196F3"
            android:scaleX="0.9"
            android:scaleY="0.9" />

    </LinearLayout>

    <!-- Main Content Area -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchFilterLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FAFAFA"
            android:padding="16dp">

            <!-- Empty State Message -->
            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_state_icon"
                    android:textSize="64sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/emptyStateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_items_to_buy"
                    android:textSize="18sp"
                    android:textColor="#666666"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_plus_to_add"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- RecyclerView for category accordion -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/toBuyRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="80dp"
                android:visibility="gone" />

            <!-- Floating Action Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addItemFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="24dp"
                android:src="@android:drawable/ic_input_add"
                android:contentDescription="@string/add_item"
                app:tint="#FFFFFF"
                app:backgroundTint="#2196F3"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp" />

        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>
