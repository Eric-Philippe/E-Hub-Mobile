<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header Section -->
    <LinearLayout
            android:id="@+id/headerBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="14dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/todoRecycler">

        <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="@string/back_button"
                android:background="@drawable/btn_outline"
                android:textColor="#333333"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:fontFamily="sans-serif-medium"
                android:minWidth="0dp" />

        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/todo_title"
                android:textSize="24sp"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center" />

        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
    </LinearLayout>

    <!-- Content list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/todoRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:layout_constraintBottom_toTopOf="@id/rootCreateForm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom form to create a new root To-Do -->
    <LinearLayout
        android:id="@+id/rootCreateForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray_100"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etRootLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/add_new_list_hint"
            android:textColor="@color/gray_700"
            android:textColorHint="@color/gray_400"
            android:background="@android:color/transparent"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="textCapSentences|text" />

        <!-- Small color chip to pick root color -->
        <View
            android:id="@+id/btnPickColor"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_color_chip"
            android:contentDescription="@string/pick_color"
            android:clickable="true"
            android:focusable="true" />

        <Button
            android:id="@+id/btnCreateRoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/create"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:background="@drawable/btn_outline"
            android:backgroundTint="@color/gray_300" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>